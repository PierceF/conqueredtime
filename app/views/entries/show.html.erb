<h3><%= @entry.goal.split.map(&:capitalize).join(' ') %></h3>
<div class="card-large">
<% @milestones.each do |milestone| %>
<div class="card-large-group">
<h3><i style="font-size:16px"; class="fas fa-clock"></i>
<%= milestone.time %></h3>
<h4> <%= milestone.title.split.map(&:capitalize).join(' ') %></h4>
<%= simple_form_for([milestone, Pomodoro.new]) do |m| %>
  <%= m.submit "Focus Session", :class => "form-submit-green"%>
  </div>
<% end %>
<% end %>
</div>


<div class="entries-card">
  <%= simple_form_for [@entry, @milestone] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :title, hint: 'Ex, Clean my room', label: 'Create Milestone' %>
  <div class="form-actions">
    <%= f.button :submit %>
    <div class="back-button-form">
      <%= link_to "Back", journals_path %>
    </div>
  </div>
</div>
<% end %>
