<div class="scroll-container">
  <div class="group-creation1">
    <div class="card-for-entries">
      <% title "New Journal Entry" %>
      <div class="card-for-entries-inner ">
          <img src="https://res.cloudinary.com/doem0zjpf/image/upload/v1563001489/nice_try_bzisao.png" alt="">
        <p><span class="style-inline">Great choice!</span><br> Let's create a goal that's specific to
          <%= @journal.title.capitalize %>, then we will create some milestones to help accomplish that goal.</p>
      </div>
      <div class="card-for-entries-form">
        <%= simple_form_for [@journal, @entry] do |m| %>
          <%= m.input :goal %>
          <div class="card-for-entries-button">
        <a href="#scroll-button" class="form-submit">Create</a>
        </div>
      </div>
    </div>
  </div>
  <div class="space-between"></div>
  <div id="scroll-button" class="group-creation2">
    <div class="card-for-milestones">
      <div class="card-for-milestones-inner">
        <p><span class="style-inline"> Last step!</span><br> List up to 3 actions, habits, or benchmarks that will bring you closer to your goal.</p>
        <img src="https://res.cloudinary.com/doem0zjpf/image/upload/v1563108730/reverze_cuytoz.png" alt="">
        </div>
        <%= m.simple_fields_for :milestones do |p| %>
        <%= p.input :title, :class => "form-textfield-milestone" %>
      <% end %>
      <%= m.simple_fields_for :milestones do |p| %>
      <%= p.input :title, label: false, :class => "form-textfield-milestone" %>
    <% end %>
    <%= m.simple_fields_for :milestones do |p| %>
    <%= p.input :title, label: false, :class => "form-textfield-milestone" %>
  <% end %>
  <div class="card-for-milestones-inner">
  <%= m.submit "Create", :class => "form-submit"%>
<% end %>
</div>
</div>
</div>

<button class="collapsible">
  <div class="card-journal-book-entries">
  <h3><%= %><br></h3>
    </div>
  <a class="button" href="#popup<%= entry.id %>">+</a>
</button>
<div class="content">
    <% entry.milestones.each do |milestone| %>
      <%= simple_form_for([milestone, Pomodoro.new]) do |m| %>
      <div class="group-collapse">
        <p><%= milestone.title %></p>
        <%= button_tag do %>
        <i class="animate-180 fas fa-hourglass-end"></i>
      <% end %>
    </div>
  <% end %>
<% end %>
</div>
<div id="popup<%= @journal.title.capitalize %>" class="overlay">
<div class="popup">
<a class="close" href="#">&times;</a>
  <p  class="add-milestone" style="color:#69585F; text-align:center">Add a New Milestone</p>
  <%= simple_form_for [entry, Milestone.new] do |m| %>
  <%= m.input :title, label: false, :class => "form-textfield" %>
<% end %>
</div>
</div>
<% end %>

<a class="card-journal-book-add" href="#popup1">New Goal</a>

</div>


<script>
function on() {
document.getElementById("overlay").style.display = "block";
}

function off() {
document.getElementById("overlay").style.display = "none";
}
</script>
