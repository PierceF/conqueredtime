
<div class="login-wrap" style="background: url('https://res.cloudinary.com/doem0zjpf/image/upload/v1574194082/photo-1521833965051-8273d0579115_nviajd.jpg'); background-position:center; background-size:cover;">
  <div class="container-main">
<div class="login-form">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
<div class="box-under-button">
    <%= f.button :submit, "Log in" %>

<% end %>

  <%= render "devise/shared/links" %>

</div>
</div>
</div>
</div>
</div>
