
<h2>My Journals</h2>

<%= link_to root_path do %>

<div class="flip-card">
  <div class="flip-card-inner">
    <% @journals.each do |journal| %>
    <div class="flip-card-front grid-main card-journal background">
      <h3><%= journal.title.split.map(&:capitalize).join(' ') %></h3>
    </div>
<% end %>
<% end %>
<%= link_to root_path do %>
    <% @journals.each do |journal| %>
    <div class="flip-card-back">
      <h3><%= journal.title.split.map(&:capitalize).join(' ') %></h3>
    </div>
    <% end %>
  </div>
</div>
  <% end %>
<%= link_to "BACK", root_path, :class => "button-large-red" %>
