
<div class="scroll-effect">
<div class="card-large">
<h3><%= @entry.goal.split.map(&:capitalize).join(' ') %></h3>
<% @milestones.ordered.each do |milestone| %>
<div class="card-large-group">
<h3 style=";"> <%= milestone.title.split.map(&:capitalize).join(' ') %></h3>
        <%= simple_form_for([milestone, Pomodoro.new]) do |m| %>
          <!-- <i class="far fa-clock"></i> -->
          <%= button_tag do %>
          <i class="far fa-clock"></i>
          <% end %>
  </div>
<% end %>
<% end %>
</div>



<div class="entries-card">
  <%= simple_form_for [@entry, @milestone] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :title, hint: 'Ex, Clean my room', label: 'Create Milestone' %>
  <div class="form-actions">
    <%= f.button :submit %>
      <%= link_to "Back", journals_path, :class => "form-submit-2"%>
  </div>
</div>
<% end %>
</div>
