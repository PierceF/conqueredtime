<div id="pomodoro">
  <div id="clock">
    <div id="timer">
      <div id="title">Are you ready?</div>
      <div id="countdown">
        <span id="minutes" style="font-family: 'Roboto', sans-serif;">05</span>
        <span id="seconds" style="font-family: 'Roboto', sans-serif;">00</span>
      </div>
      <div id="controls" class="reset">

        <div id="start">
          <%= simple_form_for @pomodoro, remote: true do |f| %>
            <%= f.input :action, as: :hidden, input_html: { value: 'start' } %>
            <%= button_tag do %>
              <i class="fas fa-play"></i> Start
            <% end %>
          <% end %>
        </div>

        <div id="done">
          <%= simple_form_for @pomodoro, remote: true do |f| %>
            <%= f.input :action, as: :hidden, input_html: { value: 'done' } %>
            <%= button_tag do %>
              <i class="fas fa-check"></i> I am done
            <% end %>
          <% end %>
        </div>

        <div id="back">
          <%= link_to entry_path(@entry) do %>
          <div class="test">
            To journal
            </div>
          <% end %>
        </div>
       <!--  <div id="pause"><i class="fas fa-pause"></i> Pause</div>
        <div id="reset"><i class="fas fa-sync-alt"></i> Reset</div> -->
      </div>
    </div>
  </div>
  <div id="options">
    <div id="session">
      <!-- <i id="incrSession" class="fas fa-angle-double-up"></i> -->
      <span class="option-title">Your Focus Session is</span>
      <input id="sessionInput" type="number" value="25" max="25" min="25">
      <span class="option-title" style="margin-top: 0px;">Minutes</span>
      <!-- <i id="decrSession" class="fas fa-angle-double-down"></i> -->
    </div>
    <!-- <div id="break"> -->
      <!-- <i id="incrBreak" class="fas fa-angle-double-up"></i> -->
      <!-- <span class="option-title">Break</span> -->
      <!-- <input id="breakInput" type="number" value="5" max="5" min="5"> -->
      <!-- <i id="decrBreak" class="fas fa-angle-double-down"></i> -->
    <!-- </div> -->
  </div>
</div>
